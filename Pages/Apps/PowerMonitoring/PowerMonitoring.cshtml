<!-- ส่วน Status Cards และ Power Overview ที่มีอยู่เดิม -->
<!-- Status Cards -->
<div class="row">
  <div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-primary h-100">
      <div class="card-body">
        <div class="d-flex align-items-center mb-2 pb-1">
          <div class="avatar me-2">
            <span class="avatar-initial rounded bg-label-primary"><i class="bx bx-power-off"></i></span>
          </div>
          <h4 class="ms-1 mb-0">42</h4>
        </div>
        <p class="mb-1">Online UPS Units</p>
        <p class="mb-0">
          <span class="fw-medium me-1">+8.2%</span>
          <small class="text-muted">than last hour</small>
        </p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-warning h-100">
      <div class="card-body">
        <div class="d-flex align-items-center mb-2 pb-1">
          <div class="avatar me-2">
            <span class="avatar-initial rounded bg-label-warning"><i class="bx bx-error"></i></span>
          </div>
          <h4 class="ms-1 mb-0">8</h4>
        </div>
        <p class="mb-1">Units with Warnings</p>
        <p class="mb-0">
          <span class="fw-medium me-1">-3.7%</span>
          <small class="text-muted">than last hour</small>
        </p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-danger h-100">
      <div class="card-body">
        <div class="d-flex align-items-center mb-2 pb-1">
          <div class="avatar me-2">
            <span class="avatar-initial rounded bg-label-danger"><i class="bx bxs-battery-low"></i></span>
          </div>
          <h4 class="ms-1 mb-0">5</h4>
        </div>
        <p class="mb-1">Critical Battery Level</p>
        <p class="mb-0">
          <span class="fw-medium me-1">+2.3%</span>
          <small class="text-muted">than last hour</small>
        </p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-info h-100">
      <div class="card-body">
        <div class="d-flex align-items-center mb-2 pb-1">
          <div class="avatar me-2">
            <span class="avatar-initial rounded bg-label-info"><i class="bx bx-plug"></i></span>
          </div>
          <h4 class="ms-1 mb-0">13</h4>
        </div>
        <p class="mb-1">On Battery Power</p>
        <p class="mb-0">
          <span class="fw-medium me-1">-1.5%</span>
          <small class="text-muted">than last hour</small>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Power Overview -->
<div class="row">
  <div class="col-xxl-6 mb-4">
    <div class="card h-100">
      <div class="card-header">
        <div class="card-title mb-0">
          <h5 class="m-0">Power System Overview</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="d-none d-lg-flex vehicles-progress-labels mb-3">
          <div class="power-progress-label online-text" style="width: 45.7%;">On Utility</div>
          <div class="power-progress-label battery-text" style="width: 28.3%;">On Battery</div>
          <div class="power-progress-label bypass-text" style="width: 17.4%;">On Bypass</div>
          <div class="power-progress-label offline-text" style="width: 8.6%;">Offline</div>
        </div>
        <!-- Progress Bars for Power States -->
        <div class="power-overview-progress progress mb-3" style="height: 46px;">
          <div class="progress-bar bg-success" style="width: 45.7%">45.7%</div>
          <div class="progress-bar bg-warning" style="width: 28.3%">28.3%</div>
          <div class="progress-bar bg-info" style="width: 17.4%">17.4%</div>
          <div class="progress-bar bg-danger" style="width: 8.6%">8.6%</div>
        </div>
        <!-- Details Table -->
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td>On Utility Power</td>
                <td>45.7%</td>
                <td>32 units</td>
              </tr>
              <tr>
                <td>On Battery Power</td>
                <td>28.3%</td>
                <td>20 units</td>
              </tr>
              <tr>
                <td>On Bypass</td>
                <td>17.4%</td>
                <td>12 units</td>
              </tr>
              <tr>
                <td>Offline</td>
                <td>8.6%</td>
                <td>6 units</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- Additional Performance Metrics -->
  <div class="col-xxl-6 mb-4">
    <div class="row">
      <!-- Battery Performance -->
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header d-flex align-items-center justify-content-between">
            <div class="card-title mb-0">
              <h5 class="m-0 me-2">Battery Performance</h5>
              <small class="text-muted">Monthly analysis</small>
            </div>
            <div class="dropdown">
              <button class="btn btn-label-primary dropdown-toggle" data-bs-toggle="dropdown">January</button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="javascript:void(0);">January</a></li>
                <li><a class="dropdown-item" href="javascript:void(0);">February</a></li>
                <li><a class="dropdown-item" href="javascript:void(0);">March</a></li>
              </ul>
            </div>
          </div>
          <div class="card-body">
            <div id="batteryPerformanceChart"></div>
          </div>
        </div>
      </div>


      <!-- Alert History -->
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header">
            <h5 class="card-title mb-0">Alert History</h5>
          </div>
          <div class="card-body">
            <ul class="timeline mb-0">
              <li class="timeline-item timeline-item-transparent">
                <span class="timeline-point timeline-point-danger"></span>
                <div class="timeline-event">
                  <div class="timeline-header">
                    <h6 class="mb-0">UPS Critical Battery</h6>
                    <small class="text-muted">2 hours ago</small>
                  </div>
                  <p class="mb-2">DC East - UPS #5 battery level critical</p>
                  <div class="d-flex flex-wrap">
                    <button class="btn btn-sm btn-outline-danger me-2">View Details</button>
                  </div>
                </div>
              </li>
              <li class="timeline-item timeline-item-transparent">
                <span class="timeline-point timeline-point-warning"></span>
                <div class="timeline-event">
                  <div class="timeline-header">
                    <h6 class="mb-0">Temperature Warning</h6>
                    <small class="text-muted">5 hours ago</small>
                  </div>
                  <p class="mb-2">HQ - UPS #2 high temperature warning</p>
                  <div class="d-flex flex-wrap">
                    <button class="btn btn-sm btn-outline-warning me-2">View Details</button>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- เพิ่ม Map Section -->
<div class="row">
  <!-- Power Distribution Map -->
  <div class="col-xxl-8 mb-4">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <div class="card-title mb-0">
          <h5 class="m-0">Power Distribution Map</h5>
          <small class="text-muted">Real-time UPS locations and status</small>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-primary btn-sm active">All UPS</button>
          <button type="button" class="btn btn-outline-primary btn-sm">Warnings</button>
          <button type="button" class="btn btn-outline-primary btn-sm">Critical</button>
        </div>
      </div>
      <div class="card-body">
        <div class="leaflet-map" id="powerMap" style="height: 500px;"></div>
      </div>
    </div>
  </div>

  <!-- Location Details -->
  <div class="col-xxl-4 mb-4">
    <div class="card">
      <div class="card-header">
        <div class="card-title mb-0">
          <h5 class="m-0">Location Details</h5>
          <small class="text-muted">UPS status by location</small>
        </div>
      </div>
      <div class="card-body">
        <ul class="p-0 m-0">
          <li class="d-flex mb-4 pb-1">
            <div class="avatar flex-shrink-0 me-3">
              <span class="avatar-initial rounded bg-label-success"><i class="bx bx-check"></i></span>
            </div>
            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
              <div class="me-2">
                <h6 class="mb-0">Bangkok HQ</h6>
                <small class="text-muted">12 UPS Units</small>
              </div>
              <div class="user-progress">
                <small class="fw-semibold">100% Online</small>
              </div>
            </div>
          </li>
          <li class="d-flex mb-4 pb-1">
            <div class="avatar flex-shrink-0 me-3">
              <span class="avatar-initial rounded bg-label-warning"><i class="bx bx-error"></i></span>
            </div>
            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
              <div class="me-2">
                <h6 class="mb-0">Datacenter East</h6>
                <small class="text-muted">8 UPS Units</small>
              </div>
              <div class="user-progress">
                <small class="fw-semibold">2 Warnings</small>
              </div>
            </div>
          </li>
          <li class="d-flex mb-4 pb-1">
            <div class="avatar flex-shrink-0 me-3">
              <span class="avatar-initial rounded bg-label-danger"><i class="bx bxs-battery-low bx-flashing"></i></span>
            </div>
            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
              <div class="me-2">
                <h6 class="mb-0">Branch Office North</h6>
                <small class="text-muted">5 UPS Units</small>
              </div>
              <div class="user-progress">
                <small class="fw-semibold">1 Critical</small>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
</div>

