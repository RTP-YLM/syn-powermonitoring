        position: 'top'
      },
      tooltip: {
        shared: true,
        intersect: false
      }
    };

    // แสดงกราฟใน #batteryPerformanceChart
    const chart = new ApexCharts(document.querySelector("#batteryPerformanceChart"), options);
    chart.render();

